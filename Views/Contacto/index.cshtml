@model appejemplo2.Models.Contacto

@{
    ViewData["Title"] = "Contacto";
}
<h1>@ViewData["Title"]</h1>

<div class="text-center">
    <h1 class="display-4">Contactenos</h1>

    <form asp-controller="Contacto" asp-action="Create">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control form-control-sm" type="text" placeholder="Especial de Contacto"/>

        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />

        <label asp-for="subjet" class="form-label"></label>
        <input asp-for="subjet" class="form-control" />

        <label asp-for="comment" class="form-label"></label>
        <input asp-for="comment" class="form-control" />

        <div class="form-group">
                <button type="submit" class="btn btn-primary">Registrar</button>
        </div>
    </form>
    <h1>@ViewData["Message"]</h1>
    <div>
        <a asp-action="Index">Back to list</a>
    </div>


</div>