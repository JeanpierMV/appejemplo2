@model appejemplo2.Models.Contacto

@{
    ViewData["Title"] = "Contacto";
}
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>


<br>
<h1 class="display-4">Contactenos</h1>
<br>


<div class="row">
    <div class="col-md-8">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner" max-height="39rem">
    <div class="carousel-item active" data-interval="500">
      <img  src="/images/foto1.jpg" alt="First slide" height="350px" >
    </div>

    <div class="carousel-item" data-interval="500">
      <img  src="/images/foto2.jpg" alt="Second slide" height="350px" >
    </div>

    <div class="carousel-item" data-interval="500">
      <img  src="/images/foto3.jpg" alt="Third slide" height="350px" >
    </div>
  </div>

  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    
  </a>
</div>
        
    </div> 
   
    <div class="col-md-4">
        <form asp-controller="Contacto" asp-action="Create">
            <label asp-for="Nombre" class="form-label"></label>
            <input asp-for="Nombre" class="form-control form-control-sm" type="text" placeholder="Especial de Contacto"/>

            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" />

            <label asp-for="subjet" class="form-label"></label>
            <input asp-for="subjet" class="form-control" />

            <label asp-for="comment" class="form-label"></label>
            <input asp-for="comment" class="form-control" />         
        <br>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Registrar</button>
            </div>
        </form>
    </div>  
</div>
<br>
<br>
    <h1 class="text-center">@ViewData["Message"]</h1>
    <br>

    <div>
        <a asp-action="Index"> <-Regresar </a>
    </div>

     
               
    
    






